
@model Flowers.Web.Models.PagingModel
@{
	var baseUrl = Html.ViewData["BaseUrl"];
}

<div class="content_sortPagiBar">
	<div class="bottom-pagination-content clearfix">

		<div id="pagination_bottom" class="pagination clearfix">
			<ul class="pagination">

				@if (Model.Page - 1 > 0)
				{
					<li id="pagination_previous_bottom" class="pagination_previous">

						<a href="/@baseUrl?page=@(Model.Page - 1)">
							<i class="fa fa-chevron-left"></i>
							<b>Назад</b>
						</a>

					</li>
				}

				@{
					int pageCount = 5;
					int from = Model.Page - 2 <= 0 ? 1 : Model.Page - 2;
					int to = from + pageCount;

					if (to > Model.Count / Model.PageSize)
					{
						to = Model.Count / Model.PageSize;
						if (Model.Count % Model.PageSize != 0)
						{
							to++;
						}
					}

					for (var i = from; i <= to; i++)
					{
						if (i == Model.Page)
						{
							<li class="active current">
								<span>
									<span>
										@i
									</span>
								</span>
							</li>
						}
						else
						{
							<li>
								<a href="/@baseUrl?page=@i">
									<span>
										@i
									</span>
								</a>
							</li>
						}
					}

				}
				
				@if (Model.Page < (float)Model.Count / Model.PageSize)
				{

					<li id="pagination_next_bottom" class="pagination_next">
						<a href="/@baseUrl?page=@(Model.Page + 1)">
							<b>Вперед</b>
							<i class="fa fa-chevron-right"></i>
						</a>
					</li>
				}
			</ul>
		</div>
		<div class="product-count">
			@(Model.Page * Model.ItemsCount) из @Model.Count
		</div>

	</div>
</div>