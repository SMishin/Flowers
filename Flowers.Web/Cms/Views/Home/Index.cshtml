@using Flowers.Web.Core
@{
	ViewBag.Title = "_cms";
}

@section head{

	@{
		<link href="/static/app/cms/styles/main.css?v=@Html.GetStaticVersion()" rel="stylesheet" />
	}
}


<cms class="layout">
	<div class="loader"></div>
</cms>

@section scripts{
	<script>
		window.app = window.app || {};
	</script>
	@{
		if (Html.IsDebug())
		{
			Html.RenderPartial("_DebugScriptLoader", new[] {

				"/static/node_modules/systemjs/dist/system.src.js",
				"/static/app/cms/systemjs.config.js"

			});

			<script>
				(function () {
					System.import('app/main')
						.then(null, console.error.bind(console));
				}())
			</script>
		}
		else
		{
			Html.RenderPartial("_ReleaseScriptLoader", new[]
			{
				"/static/app/cms/app.js"
			});
		}
	}
}